{{#extends 'base'}}

{{#block 'content'}}
<h1>Variants: {{luggage.model}}</h1>
<a href="/luggages/{{luggage.id}}/variants/create" class="btn btn-primary btn-sm">Add Variant</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Image</th>
            <th>Color</th>
            <th>Dimension</th>
            <th>Stock</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each variants}}
        <tr>
            <td>
                {{this.id}}
            </td>
            <td>
                <img src="{{this.thumbnail_url}}" alt='Luggage thumbnail image'/>
            </td>
            <td>
                {{this.color.color}}
            </td>
            <td>
                {{this.dimension.dimension}}
            </td>
            <td>
                {{this.stock}}
            </td>
            <td>
                <a href="/luggages/{{this.luggage_id}}/variants/{{this.id}}/update" class="btn btn-primary btn-sm">Update</a>
<a href="/luggages/{{this.luggage_id}}/variants/{{this.id}}/delete" data-luggage-id="{{this.luggage_id}}" data-variant-id="{{this.id}}"
            class="btn btn-danger btn-sm btn-delete">Delete</a>
            </td> 
        </tr>
        {{/each}}
    </tbody>
</table>

{{/block}}
{{/extends}}